<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="400" spacing="15" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group50.controller.LoginController">

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="âœˆ Log In" />
    <Label fx:id="airportErrorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" text="" />

    <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 10px;" />

    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 10px;" />

    <Button fx:id="loginButton" onAction="#handleLogin" style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-size: 14px;                    -fx-border-radius: 20px; -fx-padding: 10px; -fx-min-width: 120px;" text="Login" />

    <Label fx:id="errorLabel" style="-fx-font-size: 12px;" textFill="red" />
</VBox>
